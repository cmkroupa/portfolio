<div id="<%= dom_id experience %>" class="timeline-marker group">
  <div class="timeline-dot group-hover:scale-125 transition-transform duration-300"></div>
  
  <div class="glass-card p-10 mb-8 ml-4">
    <div class="flex flex-col md:flex-row justify-between items-start gap-4 mb-6">
      <div>
        <h3 class="text-2xl font-bold mb-2"><%= experience.title %></h3>
        <p class="text-accent font-semibold text-lg">
          <% if experience.url.present? %>
            <%= link_to experience.organization, experience.url, target: "_blank", class: "hover:underline" %>
          <% else %>
            <%= experience.organization %>
          <% end %>
        </p>
      </div>
      <div class="text-right">
        <span class="glass-badge highlight font-bold">
          <%= experience.start.strftime("%b %Y") if experience.start %> â€” <%= experience.end ? experience.end.strftime("%b %Y") : "Present" %>
        </span>
        <p class="text-gray-500 mt-2 text-sm"><%= experience.location %></p>
      </div>
    </div>
    
    <% if experience.respond_to?(:description) && experience.description.present? %>
      <div class="text-gray-600 leading-relaxed prose prose-slate">
        <%= experience.description %>
      </div>
    <% end %>
  </div>
</div>
