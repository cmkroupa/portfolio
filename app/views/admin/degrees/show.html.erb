<p style="color: green"><%= notice %></p>

<%= render @degree %>

<div>
  <%= link_to "Edit this degree", edit_admin_degree_path(@degree) %> |
  <%= link_to "Back to degrees", admin_degrees_path %>

  <%= button_to "Destroy this degree", [:admin, @degree], method: :delete %>
</div>

<hr class="my-8">

<div class="flex justify-between items-center mb-4">
  <h2 class="text-2xl font-bold">Notable Courses</h2>
  <%= link_to "Add Course", new_admin_degree_course_path(@degree), class: "glass-badge" %>
</div>

<div id="courses">
  <% @degree.courses.each do |course| %>
    <div class="glass-card p-4 mb-4 flex justify-between items-center">
      <div>
        <h4 class="font-bold"><%= course.title %></h4>
        <p class="text-sm text-gray-600"><%= course.description %></p>
      </div>
      <div class="flex gap-2">
        <%= link_to "Edit", edit_admin_degree_course_path(@degree, course) %>
        <%= button_to "Delete", [:admin, @degree, course], method: :delete, class: "text-red-600" %>
      </div>
    </div>
  <% end %>
</div>
